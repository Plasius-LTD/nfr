{
  "name": "@plasius/nfr",
  "version": "1.0.2",
  "description": "a small, typed Non-Functional-Requirement (NFR) framework that cleanly adapts to different cloud vendors (GA4, PostHog, Azure Application Insights, etc.) and different concerns (analytics/events, metrics, tracing, logs, feature flags, performance).",
  "homepage": "https://github.com/Plasius-LTD/nfr#readme",
  "bugs": {
    "url": "https://github.com/Plasius-LTD/nfr/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/nfr.git"
  },
  "license": "Apache-2.0",
  "author": "Plasius LTD",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "test": "vitest run --environment jsdom"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "react": "^19",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19",
    "web-vitals": "^5.1.0"
  },
  "peerDependenciesMeta": {
    "web-vitals": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://patreon.com/PlasiusLTD"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ]
}
